<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- TEXT STYLE -->
    <style name="textDark">
        <item name="android:textColor">#090908</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="textLight">
        <item name="android:textColor">#CBDAFC</item>
    </style>

    <style name="textLight.small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textRed_small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#CA1A1A</item>
    </style>

    <style name="textDark.normal">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textGreen_big">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#35A475</item>
    </style>

    <style name="center">
        <item name="android:gravity">center</item>
    </style>
    <!-- BACKGRUOND STYLE -->
    <style name="oreangeBackground">
        <item name="android:background">#F98017</item>
    </style>

    <style name="lightBackground">
        <item name="android:background">#CBDAFC</item>
    </style>

    <style name="darkSide">
        <item name="android:background">#090908</item>
    </style>

    <style name="salmon">
        <item name="android:background">#FFBD80</item>
    </style>

</resources>